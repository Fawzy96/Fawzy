<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Phone"
    android:background="@drawable/bg_two">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/colorAccent"
        android:id="@+id/relativeLayout140">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logooo"
            android:layout_centerInParent="true"
            />
        <Button
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/left_arrow"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_350sdp"
        android:layout_below="@id/relativeLayout140"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@drawable/lightimage"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"


            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/relativeLayout141">

            <Button
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:background="@drawable/pl3"
                android:layout_marginRight="@dimen/_15sdp"/>
            <EditText
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/bar"
                android:layout_marginLeft="@dimen/_10sdp"
                android:hint="search"
                android:textSize="@dimen/_12sdp"
                android:paddingLeft="@dimen/_15sdp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240sdp"
            android:layout_below="@id/relativeLayout141"
            android:id="@+id/relativeLayout142"
            >
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listone"
                ></ListView>

        </RelativeLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_below="@id/relativeLayout142">
           <EditText
               android:layout_width="@dimen/_230sdp"
               android:layout_height="@dimen/_30sdp"
               android:layout_centerInParent="true"
               android:background="@drawable/bar"/>
       </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>